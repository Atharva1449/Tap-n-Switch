<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back1gradient"
    android:fadingEdge="horizontal|vertical"
    android:gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/buttoninfo"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:background="@drawable/ic_outline_info_24" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/tick" />

        <TextView
                android:id="@+id/textView302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
                android:text="Active"
            android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />


        <Button
            android:id="@+id/buttonstop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="140dp"
            android:background="@drawable/stopbuttonlay"
            android:text="Stop !"
            android:textColor="#95FFFFFF" />

        <RadioGroup
            android:id="@+id/radiogroupid"
            android:layout_width="281dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radiobuttonyt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="    Youtube"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:button="@drawable/radiobuttonstyle"
                />

            <RadioButton
                android:id="@+id/radiobuttonch"
                android:layout_width="193dp"
                android:layout_height="50dp"
                android:text="    Chrome"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:button="@drawable/radiobuttonstylechrome"
                />

            <RadioButton
                android:id="@+id/radiobuttonpdf"
                android:layout_width="236dp"
                android:layout_height="50dp"
                android:text="    PDF(needs wps installed)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:button="@drawable/radiobuttonstylepdf"

                />
        </RadioGroup>

        <Button
            android:id="@+id/buttonCreateWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonlay"
            android:text="Start tap n switch button"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
             />

    </LinearLayout>




</ScrollView>
